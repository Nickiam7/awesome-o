<%= turbo_frame_tag('post-tools') do %>
<div class="wall__heading p-3">
  <%= h(tag: 'h2', classes: 'lead fw-bold') do %>
    Tools Panel
  <% end %>
</div>
<div class="d-flex flex-wrap tools">
  <%= tool(name: 'Post Builder',
    icon: 'tools',
    path: post_builder_path,
    frame: 'post-builder'
  ) %>
  <%= tool(name: 'Rewrite',
    icon: 'arrow-repeat',
    path: content_rewrite_path
  ) %>
  <%= tool(name: 'Paragraph',
    icon: 'paragraph',
    path: content_paragraph_path,
  ) %>
  <%= tool(name: 'Post Title', icon: 'lightbulb') %>
  <%= tool(name: 'Components', icon: 'gear-wide-connected') %>
  <%= tool(name: 'Image', icon: 'card-image') %>
</div>
<% end %>
