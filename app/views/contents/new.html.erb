<%= container do %>
  <%= row do |c| %>
    <%= column(c, col: {md: 4}) do %>
      <%= card(classes: 'shadow mt-5') do %>
        <%= h(tag: 'h2', text: 'Come up with something cool!', classes: 'mb-3') %>
        <%= form_with(url: gpt_chat_path) do |form| %>
          <div class="form-group">
            <%= form.label(:model, 'Select model') %>
            <%= form.select(:model,
              options_for_select([['GPT-3.5','gpt-3.5-turbo'], ['GPT-4', 'gpt-4']]),
              {},
              class: 'form-select'
            ) %>
          </div>
          <div class="form-group mt-3">
            <%= form.label(:message, 'What?') %>
            <%= form.text_field(:message, class: 'form-control') %>
          </div>
          <div class="form-group mt-3">
            <%= form.submit('Or something...', class: 'btn btn-success') %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= container do %>
  <div id="chat-results"></div>
<% end %>
