<%= form_container(for: :form_container,
  heading: "Edit: #{current_user.username}",
  path: 'devise/shared'
) do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <% if resource.avatar.attached? %>
      <% else %>

      <% end %>
      <%= f.label(:avatar) %><br>
      <%= f.file_field(:avatar, class: "btn btn-outline-primary w-100") %>
    </div>

    <div class="form-floating mb-3">
      <%= f.email_field(:email,
        autofocus: true,
        autocomplete: "email",
        class: 'form-control',
        placeholder: 'example@email.com'
      ) %>
      <%= f.label(:email) %>
    </div>

    <div class="form-floating mb-3">
      <%= f.text_field(:username,
        class: 'form-control',
        placeholder: 'username'
      ) %>
      <%= f.label(:username) %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div>
      <i class="small">(leave blank if you don't want to change it)</i>
    </div>
    <div class="form-floating mb-3">
      <%= f.password_field(:password,
        autocomplete: "new-password",
        class: 'form-control',
        placeholder: 'confirm password'
      ) %>
      <%= f.label(:password) %>
      <% if @minimum_password_length %>
        <em class="small">
          <%= @minimum_password_length %> characters minimum
        </em>
      <% end %>
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field(:password_confirmation,
        autocomplete: "new-password",
        class: 'form-control',
        placeholder: 'password confirmation'
      ) %>
      <%= f.label(:password_confirmation) %>
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field(:current_password,
        autocomplete: "current-password",
        class: 'form-control',
        placeholder: 'password confirmation'
      ) %>
      <%= f.label(:current_password) %>
      <i class="small">(we need your current password to confirm your changes)</i><br />
    </div>

    <div class="d-flex align-items-center">
      <%= f.submit("Update", class: 'btn btn-primary me-2') %>
      <%= link_to("Cancel", :back, class: 'small') %>
    </div>
  <% end %>
<% end %>

<%= card(classes: 'mt-3') do %>
<h2 class="mb-2">Cancel my account</h3>
<div>
  <p class="small">Canceling your account will permanently delete all saved content. Once your account is deleted we will not be able to recover any of your content.</p>
  <%= button_to("Cancel my account",
    registration_path(resource_name),
    class: 'btn btn-danger w-100',
    data: {
      confirm: "Are you sure?",
      turbo_confirm: "Are you sure?"
    },
    method: :delete
  ) %>
</div>
<% end %>
